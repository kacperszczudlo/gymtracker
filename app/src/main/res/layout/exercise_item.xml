<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/exercise_item_background"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <!-- Nazwa ćwiczenia -->
    <TextView
        android:id="@+id/exerciseNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Ćwiczenie 1"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"/>

    <!-- Pole na liczbę powtórzeń -->
    <EditText
        android:id="@+id/repsEditText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:hint="8"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:inputType="number"
        android:padding="8dp"
        android:layout_marginStart="8dp"/>

    <!-- Pole na ciężar -->
    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:hint="85"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:inputType="number"
        android:padding="8dp"
        android:layout_marginStart="8dp"/>

    <!-- Przycisk "X" -->
    <Button
        android:id="@+id/removeExerciseButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="X"
        android:textColor="#FFFFFF"
        android:background="@drawable/remove_button_background"
        android:layout_marginStart="8dp"/>
</LinearLayout>