<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#212121"
    android:padding="16dp">

    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wzrost (cm)"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:backgroundTint="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Waga (kg)"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:backgroundTint="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/armCircEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Obwód ramienia (cm)"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:backgroundTint="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/waistCircEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Obwód talii (cm)"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:backgroundTint="#FFFFFF"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/hipCircEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Obwód bioder (cm)"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:backgroundTint="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zapisz"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:background="@drawable/nav_bar_background"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="0dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_menu"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu"
            android:scaleType="fitCenter"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Profil"
            android:scaleType="fitCenter"
            app:tint="#FFFFFF" />
    </LinearLayout>
</LinearLayout>